<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/background_layout" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/background"
        android:layout_alignLeft="@id/background"
        android:layout_alignRight="@id/background"
        android:layout_alignTop="@id/background" >

        <ImageView
            android:id="@+id/eventsPromosImage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/border_image"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/eventsPromosImage"
            android:layout_below="@id/eventsPromosImage"
            android:text="Blah blah blah"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:layout_marginTop="2dp"
            android:text="Price: " />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/price"
            android:layout_marginTop="2dp"
            android:text="Duration: " />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/duration"
            android:layout_marginTop="2dp"
            android:text="Description:" />

        <TextView
            android:id="@+id/displayDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/description"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/eventsPromosImage"
            android:layout_below="@id/description"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/displayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/price"
            android:layout_alignBottom="@id/price"
            android:layout_toRightOf="@id/price"
            android:text="TextView" />

        <TextView
            android:id="@+id/displayDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/duration"
            android:layout_alignBottom="@id/duration"
            android:layout_toRightOf="@id/duration"
            android:text="TextView" />
    </RelativeLayout>

</RelativeLayout>